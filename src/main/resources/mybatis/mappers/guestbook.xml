<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="guestbook">
	<resultMap id="resultMapGuestVo" type="GuestBookVo">
		<result column="no" property="no" />
		<result column="name" property="name" />
		<result column="password" property="password" />
		<result column="content" property="content" />
		<result column="reg_date" property="regDate" />
	</resultMap>

	<select id="getList" resultMap="resultMapGuestVo">
		<![CDATA[
			select	no,
						   name,
					       password,
						   content,
						   to_char(reg_date, 'YYYY-MM-DD HH24:MM:SS') reg_date
			from guestbook
		]]>
	</select>

	<insert id="guestbookInsert" parameterType="GuestBookVo">
		<![CDATA[ 
				insert into guestbook
				values (seq_guestbook_no.nextval, #{name}, #{password}, #{content}, sysdate)
		]]>
	</insert>

	<delete id="guestbookDelete" parameterType="GuestBookVo">
		<![CDATA[
			delete from guestbook
			where no = #{no}
			and password = #{password}
		]]>
	</delete>

</mapper>